<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <TextView
        android:textStyle="bold"
        android:id="@+id/tglText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15 April 2023"
        />

    <TextView
        android:id="@+id/encodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tglText"
        app:layout_constraintTop_toBottomOf="@+id/tglText"
        tools:text="Encode Text :  itulah" />

    <TextView
        android:id="@+id/decodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Decode Text : 7jasuhqhnn"
        app:layout_constraintTop_toBottomOf="@+id/encodeText"
        app:layout_constraintStart_toStartOf="@id/encodeText"
        />


</androidx.constraintlayout.widget.ConstraintLayout>